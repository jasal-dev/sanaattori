{
  "name": "sanaattori",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && source venv/bin/activate && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "cd apps/web && npm run build",
    "lint": "cd apps/web && npm run lint",
    "test": "npm-run-all test:*",
    "test:web": "cd apps/web && npm test",
    "test:api": "cd apps/api && source venv/bin/activate && pytest"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
