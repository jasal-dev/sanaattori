{
  "name": "sanaattori",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/landing",
    "apps/games/sanasto"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:landing": "cd apps/landing && npm run dev",
    "dev:sanasto": "cd apps/games/sanasto && npm run dev",
    "dev:api": "cd apps/api && source venv/bin/activate && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm-run-all build:*",
    "build:landing": "cd apps/landing && npm run build",
    "build:sanasto": "cd apps/games/sanasto && npm run build",
    "lint": "npm-run-all lint:*",
    "lint:landing": "cd apps/landing && npm run lint",
    "lint:sanasto": "cd apps/games/sanasto && npm run lint",
    "test": "npm-run-all test:*",
    "test:sanasto": "cd apps/games/sanasto && npm test",
    "test:api": "cd apps/api && source venv/bin/activate && pytest",
    "test:e2e": "./run-e2e-tests.sh",
    "test:e2e:ui": "cd e2e-tests && npm install && npx playwright test --ui"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
